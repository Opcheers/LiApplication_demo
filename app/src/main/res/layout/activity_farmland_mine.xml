<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/maincolor">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/maincolor"
        android:gravity="center_vertical"
        android:padding="10dp"
        android:text="我的土地"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/title"
        android:background="@drawable/shape_rounded_corners_with_white"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/shape_rounded_corners_with_shadows">

            <ImageView
                android:id="@+id/preview"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_margin="10dp"
                android:scaleType="fitXY"
                android:src="@mipmap/looper_1" />

            <TextView
                android:id="@+id/farmland_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/preview"
                android:layout_margin="10dp"
                android:text="土地一"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/farmland_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/farmland_title"
                android:layout_marginLeft="20dp"
                android:text="种植作物：大豆"
                android:textSize="18dp" />


            <TextView
                android:id="@+id/farmland_temp"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/farmland_title"
                android:layout_alignParentRight="true"
                android:text="气温：28"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/farmland_water"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/farmland_item"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:text="水分：充足"
                android:textSize="18dp" />
            <TextView
                android:id="@+id/farmland_sun"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/farmland_item"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:text="日照：充足"
                android:textSize="18dp" />
            <TextView
                android:id="@+id/farmland_mock"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/farmland_water"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="20dp"
                android:text="肥料：充足"
                android:textSize="18dp" />
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>